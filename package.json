{
  "name": "husky-lint-staged-nested",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"{web-app/src,web-app/scripts}/**/*.{js,json,css,scss,md}\"",
    "lint": "eslint \"{web-app/src,web-app/scripts}/**/*.js\" --fix --max-warnings=0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.{js,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS  =~ 1$ ]]; then npm install --no-package-lock; fi",
      "post-merge": "npm install --no-package-lock",
      "post-rebase": "npm install --no-package-lock",
      "pre-commit": "lint-staged"
    }
  }
}
